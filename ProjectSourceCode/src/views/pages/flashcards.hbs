<div class="container">
    <h1>Flashcards Overview</h1>
</div>

{{!-- Input json array of user's flashcards objects --}}
{{#each decks}}
<div class="container">
  <div class="row">
    <h2>{{name}}</h2>

    {{#each cards}}

    <div class="container">
        <div class="col">
            <div class="card flashcard">
                <div class="card-body">
                    {{!-- Switch between card sides --}}
                    {{#if show_back}}
                        <h1>{{back}}</h1>
                    {{else}}
                        <p>{{front}}</p>
                    {{/if}}
                </div>
            </div>
        </div>

    </div>
    
    {{/each}}

  </div>
</div>
{{/each}}