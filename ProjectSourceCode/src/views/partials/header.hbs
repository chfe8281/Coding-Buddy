  <style>
    .grid-container {
      display: grid;
      grid-gap: 5%;
      grid-template-columns: 1fr 1fr;
      justify-items: center;
      margin-top: 5%;
      margin-bottom: 10%;
    }
    .grid-item {
      background-color: #f4f4f4;
      padding: 3%;
      width: 90%;
      height: 90%;
      border: 1px solid #ddd;
      position: relative;
      justify-items: center;
      -o-object-fit:cover;
      
    }
